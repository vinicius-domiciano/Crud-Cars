FROM openjdk:11

ARG PROFILE
ARG ADDITIONAL_OPTS
ARG JAR_FILE=appServer/target/*.jar

ENV PROFILE=${PROFILE}
ENV ADDITIONAL_OPTS=${ADDITIONAL_OPTS}

COPY ${JAR_FILE} app.jar

EXPOSE 8080
EXPOSE 5005
EXPOSE 5555

SHELL ["/bin/sh", "-c"]

CMD java ${ADDITIONAL_OPTS} -jar app.jar --spring.profiles.active=${PROFILE}